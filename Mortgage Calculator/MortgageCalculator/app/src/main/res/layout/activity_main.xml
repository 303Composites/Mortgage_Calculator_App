<?xml version="1.0" encoding="utf-8"?>
<GridLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80FFFFFF"
    android:backgroundTint="#46FFFFFF"
    android:columnCount="2"
    android:layout_columnWeight="2"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:rowCount="10"
    android:useDefaultMargins="true"
    tools:context=".MainActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:id="@+id/homePriceEditText"
        android:layout_width="370dp"
        android:layout_height="34dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="10" />

    <TextView
        android:id="@+id/homePriceTextView"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:background="@color/result_background"
        android:hint="Enter Purchase Price"
        android:textColor="@color/edit_text"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/dpEditText"
        android:layout_width="370dp"
        android:layout_height="34dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="10" />
    <TextView
        android:id="@+id/dpTextView"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@color/result_background"
        android:textColor="@color/edit_text"
        android:textSize="24sp"
        android:hint="@string/down_payment" />


    <EditText
        android:id="@+id/interestEditText"
        android:layout_width="370dp"
        android:layout_height="34dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:digits="0123456789"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="4" />

    <TextView
        android:id="@+id/interestTextView"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@color/result_background"
        android:textColor="@color/edit_text"
        android:textSize="24sp"
        android:hint="@string/interest_rate" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_row="4"
        android:layout_column="0"
        android:indeterminate="false"
        android:progress="25"
        android:max="30"
        android:layout_gravity="center_vertical"
        android:layout_columnSpan="1" />

    <TextView
        android:id="@+id/durationTextView"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/custom_loan_duration" />


    <Button
        android:id="@+id/calculate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="0"
        android:background="@color/result_background"
        android:text="@string/calculate" />


</GridLayout>